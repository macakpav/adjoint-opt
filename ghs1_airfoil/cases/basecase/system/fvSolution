FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "p.*|pa.*"
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.1;
        smoother        GaussSeidel;

        /*solver PCG;
        preconditioner DIC;
        tolerance 1e-12;
        relTol 0.0001;
        minIter 3;
        maxIter 2000;*/
    };

    "m.*|ma.*"
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-9;
        relTol           0.01;
    };

    "(U|Ua|nuTilda|nuaTilda|yWall|da).*"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         2;
        tolerance       1e-08;
        relTol          0.1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 1;
    consistent yes;

    residualControl
    {
        p               1e-4;
        U               1e-5;
        nuTilda         1e-5;
    }
}

relaxationFactors
{
    fields
    {
        "p.*"        0.9;
    }
    equations
    {
        "U.*"        0.7;
        "nuTilda.*"  0.7;
        "yWall.*"    0.7;
    }
}


