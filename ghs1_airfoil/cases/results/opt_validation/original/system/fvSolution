FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {				
		solver PCG;
		preconditioner DIC;
		tolerance 1e-12;
		relTol 0.001;
		minIter 3;
		maxIter 100;
    }

    U
    {
		solver PBiCGStab;
		preconditioner DILU;
		tolerance 1e-12;
		relTol 0.0;
		minIter 1;
    }

    "k|omega"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-12;
        relTol          0.0;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
	consistent yes;

    residualControl
    {
        p               1e-6;
        U               1e-6;
        "k|omega"       1e-5;
    }
}

relaxationFactors
{
    fields
    {
        p               0.3;
    }
    equations
    {
        U               0.7;
        "k|omega"       0.5;
    }
}


